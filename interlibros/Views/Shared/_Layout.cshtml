    <header id="header">
        <!--header-->
        <div class="header_top">
            <!--header_top-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="contactinfo">
                            <ul class="nav nav-pills">
                                <li><a href="#"><i class="fa fa-phone"></i> +506 2222 1234</a></li>
                                <li><a href="#"><i class="fa fa-envelope"></i> info@interlibros.com</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="social-icons pull-right">
                            <ul class="nav navbar-nav">
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header_top-->

        <div class="header-middle">
            <!--header-middle-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="logo pull-left">
                            <h2>InterLibros <small>Reservaciones de libros nuevos y usados</small></h2>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="shop-menu pull-right">
                            <ul class="nav navbar-nav">
                                @if (Request.IsAuthenticated)
                                {
                                    <li><a href="#">Bienvenido @Session["Name"]</a></li>
                                    <li><a href="/Cuenta/Perfil"><i class="fa fa-user"></i> Cuenta</a></li>
                                    <li><a href="/Cuenta/Carrito"><i class="fa fa-shopping-cart"></i> Carrito</a></li>
                                    <li><a href="/Cuenta/CerrarSesion"><i class="fa fa-sign-out"></i> Cerrar Sesión</a></li>
                                }
                                else
                                {
                                    <li><a href="/Cuenta/IniciarSesion"><i class="fa fa-lock"></i> Iniciar Sesión</a></li>
                                }
                                
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-middle-->

        <div class="header-bottom">
            <!--header-bottom-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="mainmenu pull-left">
                            <ul class="nav navbar-nav collapse navbar-collapse">
                                <li class="dropdown"><a href="/">Tienda</a></li>
                                <li><a href="/Librerias">Librerías</a></li>
                                <li><a href="/Contactenos">Contáctenos</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-bottom-->
    </header><!--/header-->

    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
        
    </div>
    <footer id="footer">
        <!--Footer-->

        <div class="footer-widget">
            <div class="container">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="single-widget">
                            <h2>Ayuda</h2>
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="#">Cómo crear una cuenta</a></li>
                                <li><a href="#">Cómo reservar libros</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="single-widget">
                            <h2>Políticas</h2>
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="#">Términos de uso</a></li>
                                <li><a href="#">Políticas de Privacidad</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="single-widget">
                            <h2>Sobre InterLibros</h2>
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="#">Librerías Afiliadas</a></li>
                                <li><a href="#">Acerca de Nosotros</a></li>
                                <li><a href="#">Contáctenos</a></li>                    
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-3 col-sm-offset-3">
                        <div class="single-widget">
                            <h2>Suscríbete</h2>
                            <form action="#" class="searchform">
                                <input type="text" placeholder="Correo electrónico" />
                                <button type="submit" class="btn btn-default"><i class="fa fa-arrow-circle-o-right"></i></button>
                                <p>Obtén las mejores ofertas<br />en tu bandeja de correos...</p>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="container">
                <div class="row">
                    <p class="pull-left">Copyright © 2016 Interlibros. Todos los derechos reservados.</p>
                    <p class="pull-right">Diseñado por <span><a target="_blank" href="http://www.themeum.com">Themeum</a></span></p>
                </div>
            </div>
        </div>

    </footer><!--/Footer-->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/others")
    @RenderSection("scripts", required: false)
</body>
</html>
