@model interlibros.Models.Usuarios

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-lg-12">
        @if (Model.Librerias != null)
        {
            <div class="panel panel-default">
                <div class="panel-heading">Transacciones de Librería @Model.Librerias.Nombre</div>
                <div class="panel-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Nombre Completo</th>
                                <th>Teléfono</th>
                                <th>Correo</th>
                                <th>Libros Reservados</th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var t in Model.Librerias.Transacciones)
                            {
                                <tr>
                                    <td>@t.Fecha</td>
                                    <td>@t.Usuarios.Nombre @t.Usuarios.Apellidos</td>
                                    <td>@t.Usuarios.Telefono</td>
                                    <td>@t.Usuarios.Correo</td>
                                    <td>@t.LibroEnTransaccion.Count()</td>
                                    <th><a class="btn btn-default" href="">Ver informe</a></th>
                                    <th><a class="btn btn-success" href="">Confirmar</a></th>
                                    <th><a class="btn btn-danger" href="">Cancelar</a></th>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">Información Personal</div>
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>
                        Nombre de Usuario: 
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NombreUsuario)
                    </dd>

                    <dt>
                        Correo electrónico:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Correo)
                    </dd>

                    <dt>
                        Nombre:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>

                    <dt>
                        Apellidos:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Apellidos)
                    </dd>

                    <dt>
                        Fecha de nacimiento:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FechaNacimiento)
                    </dd>

                    <dt>
                        Teléfono:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>

                    <dt>
                        Género:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Genero)
                    </dd>

                </dl>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">Historial de Transacciones Personales</div>
            <div class="panel-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Fecha</th>
                            <th>Librería</th>
                            <th>Libros Reservados</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model.Transacciones)
                        {
                            <tr>
                                <td>@t.Fecha</td>
                                <td>@t.Librerias.Nombre</td>
                                <td>@t.LibroEnTransaccion.Count()</td>
                                <th><a class="btn btn-default" href="">Ver informe</a></th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
    </div>
</div>